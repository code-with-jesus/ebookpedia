<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:app="urn:import:com.jcode.ebookpedia.client.mvp.view">
	<ui:style>
		.wrap {
			margin: 0;
			padding: 0;
		}
		
		.wrap td {
			padding: 5px !important;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.wrap}">
		<table>
			<tr>
				<td>
					<g:Label text="Publisher" horizontalAlignment="ALIGN_RIGHT" />
				</td>
				<td align="left">
					<app:TextField ui:field="publisherField" />
				</td>
			</tr>
			<tr>
				<td>
					<g:Label text="Year" horizontalAlignment="ALIGN_RIGHT" />
				</td>
				<td align="left">
					<app:TextField ui:field="yearField" />
				</td>
			</tr>
			<tr>
				<td>
					<g:Label text="Edition" horizontalAlignment="ALIGN_RIGHT" />
				</td>
				<td align="left">
					<app:TextField ui:field="editionField" />
				</td>
			</tr>
			<tr>
				<td>
					<g:Label text="Pages" horizontalAlignment="ALIGN_RIGHT" />
				</td>
				<td align="left">
					<app:TextField ui:field="pagesField" />
				</td>
			</tr>
			<tr>
				<td>
					<g:Label text="Categories" horizontalAlignment="ALIGN_RIGHT" />
				</td>
				<td>
					<g:FlexTable ui:field="categoriesPanel" />
				</td>
			</tr>
		</table>
		<g:HorizontalPanel width="100%">
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Button ui:field="closeButton" text="Close" />
			</g:Cell>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 