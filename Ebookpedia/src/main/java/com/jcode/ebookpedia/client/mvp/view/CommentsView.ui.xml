<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:app="urn:import:com.jcode.ebookpedia.client.mvp.view">
	<ui:style>
		.wrap {
			width: 900px;
			margin: 0;
			padding: 0;
		}
		
		.wrap td {
			padding: 3px;
		}
		
		.info {
			padding: 30px 10px;
			font-style: italic;
			font-size: 15px;
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel styleName='{style.wrap}'>
		<g:Label ui:field="infoLabel" styleName='{style.info}' />
		<g:TextArea ui:field="commentBox" width="500px" height="70px" />
		<g:Button ui:field="sendButton" />
		<g:VerticalPanel ui:field="commentsPanel" />
		<app:Pager ui:field="pager" />
	</g:VerticalPanel>
</ui:UiBinder> 