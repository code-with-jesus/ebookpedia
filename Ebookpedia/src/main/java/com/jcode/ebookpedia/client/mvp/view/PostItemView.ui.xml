<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.wrap {
			width: 950px;
			border: 1px solid rgb(200, 215, 230);
			margin: 8px;
			padding: 8px;
			background-color: rgb(244, 247, 250);
			-moz-box-shadow: 3px 3px 3px #BBB;
			-webkit-box-shadow: 3px 3px 3px #BBB;
		}
		
		.wrap:hover {
			border: 1px solid silver;
			background-color: rgb(240, 240, 240);
		}
		
		.cover,.doc-info,.post-info {
			margin: 0;
			padding: 0;
		}
		
		.cover {
			padding-right: 15px;
		}
		
		.doc-info {
			width: 550px;
		}
		
		.post-info {
			width: 200px;
		}
		
		.doc-info td {
			font-size: 12px;
			padding: 2px;
		}
		
		.post-info td {
			font-size: 14px;
			padding: 4px;
			text-align: left;
		}
		
		.rating {
			font-size: 0.8em;
			padding-left: 35px;
		}
		
		.edit,.delete,.title {
			font-size: 12px;
			font-style: italic;
			padding-top: 7px;
			cursor: pointer;
			color: #0066CC;
		}
		
		.title {
			font-size: 1.3em;
			font-style: italic;
			padding-bottom: 5px;
			text-transform: capitalize;
		}
		
		.bottom {
			padding: 3px;
		}
		
		.edit:HOVER,.delete:HOVER,.title:HOVER {
			text-decoration: underline;
		}
	</ui:style>

	<g:HTMLPanel styleName='{style.wrap}'>
		<table>
			<tr>
				<td>
					<g:Image ui:field="coverImage" styleName='{style.cover}' />
				</td>
				<td>
					<g:VerticalPanel styleName='{style.doc-info}'>
						<g:HTML ui:field="titleHtml" styleName='{style.title}' />
						<g:HTML ui:field="authorsHtml" />
						<g:HTML ui:field="publisherHtml" />
						<g:HTML ui:field="isbnHtml" />
						<g:HTML ui:field="languageHtml" />
						<g:HTML ui:field="yearHtml" />
						<g:HorizontalPanel styleName='{style.bottom}'>
							<g:HTML ui:field="fileTypeHtml" />
							<g:HTML ui:field="fileSizeHtml" />
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</td>
				<td>
					<g:VerticalPanel styleName='{style.post-info}'>
						<g:HTML ui:field="createdAtHtml" />
						<g:HTML ui:field="postedByHtml" />
						<g:HTML ui:field="viewsCountHtml" />
						<g:HTML ui:field="ratingHtml" />
						<g:Label text="Rating" styleName='{style.rating}' />
						<g:HorizontalPanel>
							<g:HTML ui:field="editHtml" styleName='{style.edit}' />
							<g:HTML ui:field="deteleHtml" styleName='{style.delete}' />
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 
