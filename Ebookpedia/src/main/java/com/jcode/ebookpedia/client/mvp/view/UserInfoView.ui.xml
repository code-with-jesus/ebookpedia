<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.wrap {
			width: 900px;
			margin: 0 auto;
		}
		
		.wrap td {
			padding: 3px !important;
		}
		
		.avatar {
			margin: 0;
			padding: 20px;
			width: 50%;
			text-align: right;
		}
		
		.newPost {
			cursor: pointer;
			color: #0066CC;
		}
		
		.newPost:HOVER {
			text-decoration: underline;
		}
	</ui:style>
	<g:Grid styleName='{style.wrap}'>
		<g:row>
			<g:customCell styleName='{style.avatar}'>
				<g:Image ui:field="photoImage" />
			</g:customCell>
			<g:customCell>
				<g:VerticalPanel>
					<g:HTML ui:field="nicknameHtml" />
					<g:HTML ui:field="memberFromHtml" />
					<g:HTML ui:field="websiteHtml" />
					<g:HTML ui:field="ratingHtml" />
					<g:Label ui:field="newPost" text="New Post" styleName='{style.newPost}' />
				</g:VerticalPanel>
			</g:customCell>
		</g:row>
	</g:Grid>
</ui:UiBinder> 